
.container.agent-table
	.row.agent-table-header
		.col-md-12.col-lg-12
			h4
				| All Agents &#42; = required
	.row
		.col-md-12.col-lg-12			
			form.form-inline(role="form")
				.form-group
					label.sr-only(for="login")
						| Login
					input(type="text" id="login" name="login" ng-model='agent.login' placeholder="Enter login*")
				.form-group
					.input-group-addon /
				.form-group
					input(type="password" id="password" name="password" ng-model='agent.password' placeholder="Enter Password*")
				.form-group
					.input-group-addon @
				.form-group
					input(type="text" id="host" name="host" ng-model='agent.host' placeholder="Enter host name*")
				.form-group
					.input-group-addon :
				.form-group
					input(type="text" id="port" name="port" ng-model='agent.port' size="5" placeholder="port ")
				.form-group
					input(type="text" name="user" ng-model='agent.user' placeholder="Enter sudo user")
				.form-group
					&nbsp;
					button.btn.btn-primary(ng-click='addAgent(agent)' ) Add Agent

	.row(ng-repeat="agent in connectedAgents")
		.col-md-4.col-lg-4
			i.glyphicon.glyphicon-remove(ng-click='deleteAgent(agent)' ) &nbsp;
			i.glyphicon.glyphicon-hdd.agent-ready( ng-show="agent.status=='READY'")
			i.glyphicon.glyphicon-hdd.agent-error( ng-show="agent.status=='ERROR'")
			i.glyphicon.glyphicon-hdd.agent-busy( ng-show="agent.status !='READY' && agent.status !='ERROR'")  
			&nbsp;
			a(href="http://{{agent.host}}:{{agent.port}}" target="__blank")
						{{agent.user}}@{{agent.host}}:{{agent.port}}
				.col-md-4.col-lg-5(ng-repeat="job in agentJobs" ng-hide="job.progress == 0 || !job.progress")
					a(href="http://{{agent.host}}:{{agent.port}}" target="__blank")
						{{agent.user}}@{{agent.host}}:{{agent.port}}
		.col-md-6.col-lg-6
			span.pull-left
				{{agent.message}}
			span.pull-left
				progressbar(ng-hide="agent.progress < 1" animate="agent.progress" value="agent.progress" type="success")
						{{agent.status}}

	
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js')
