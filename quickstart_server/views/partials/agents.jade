
.agent-form
	table
		thead
			tr
				td(colspan="2")
					| Add via ssh here:
				td(colspan="5" align"left")
					span(ng-show="message" style="color:red;text-align:left;")
						{{message}}
			tr
				td Login&#42;
				td Password&#42;
				td @
				td host&#42;
				td port
				td sudo as user
				td
		tbody
			tr
				td: input(type="text" name="login" ng-model='agent.login')
				td:	&#47;
					input(type="password" name="password" ng-model='agent.password')
				td:	&#64;
				td: input(type="text" name="host" ng-model='agent.host')
				td: input(type="text" name="port" ng-model='agent.port' size="5")
				td: input(type="text" name="user" ng-model='agent.user')
				td: button(ng-click='addAgent(agent)' ) Add Agent
			tr
				td(colspan="7") 
					&#42; = required
			tr
				td(colspan="7")
{{connectedAgents}}
.agent-list
	table
		thead
			tr
				td(colspan="6")
					h2 Connected Agents
			tr
				td(colspan="6" class="key")
					img(src="images/remove.png") 
					d  = remove 
					img(src="images/install.png") 
					|  = reinstall 
					img(src="images/execute.png") 
					|  = execute 
			tr
				td 
				td 
				td 
				td user@host:port
				td status
				td agent messages
		tbody
			tr(ng-repeat="agent in connectedAgents" ng-class="rowClass(agent)" id="{{agent._id}}" ng-class-odd="'odd'" ng-class-even="'even'")
				td 
					a(ng-click='deleteAgent(agent)')
						img(src="images/remove.png")
				td 
					a(href="/api/addAgent?id={{agent._id}}")
						img(src="images/install.png")
				td 
					a(ng-click='execute(agent)')
						img(src="images/execute.png")
				td: d(id="{{agent._id}}_host" )
					a(href="http://{{agent.host}}:{{agent.port}}" target="__blank")
						{{agent.user}}@{{agent.host}}:{{agent.port}}
				td: d(id="{{agent._id}}_status")
					progressbar(ng-hide="agent.progress < 1" animate="agent.progress" value="agent.progress" type="success")
						{{agent.status}}
					p(ng-hide="agent.progress > 0")
						{{agent.status}}
				td(id='{{agent._id}}_messages')
					b {{agent.message}}
	
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js')
	script(src='http://jquery-json.googlecode.com/files/jquery.json-2.2.min.js')
