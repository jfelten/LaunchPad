extends layout

block body
	div(ng-controller='AppCtrl') 
		.qs-header
			.navbar.navbar-default.navbar-static-top(role='navigation')
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.sr-only Toggle navigation
				.navbar-collapse.collapse
					.logo
						img(src="/images/robot.png")
					.qs-navbar
						ul.serverName
							| {{serverInfo.name}}:{{serverInfo.port}}
						ul.nav.navbar-nav
							- var obj = { '/partials/agents':'Agents', '/partials/jobs':'Jobs', '/partials/environments':'Environments', '/partials/about':'About'  }
								- each val, key in obj
									- if (id == key)
										li.active
											a(href='#{key}') #{val}
									- else            
										li
											a(href='#{key}') #{val}
		div(ng-view)
		div
			|  Started: {{serverInfo.started}} Copyright 2014 v
			span(app-version)
	
		script(src='js/lib/angular/angular.js')
		script(src='js/app.js')
		script(src='js/services.js')
		script(src='js/controllers.js')
		script(src='js/filters.js')
		script(src='js/directives.js')
		script(src='js/socket.io.js')
		script(src='js/ui-bootstrap-tpls-0.11.0.min.js')
